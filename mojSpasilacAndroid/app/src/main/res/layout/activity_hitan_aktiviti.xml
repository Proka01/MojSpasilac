<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HitanAktiviti">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="700px"
            android:layout_height="100px"
            android:layout_marginTop="700px"
            android:layout_centerHorizontal="true"
            android:textSize="70px"
            android:textStyle="bold|italic"
            android:text="   Unesite broj osoba:"
            />

        <EditText
            android:id="@+id/editText_broj_osoba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginLeft="400px"
            android:layout_marginTop="400px"
            android:text="20"
            />

        <Button
            android:id="@+id/btn_hitna_prijava"
            android:layout_marginTop="1200px"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#cf081f"
            android:text="Hitno prijavi"
            />

    </RelativeLayout>


</LinearLayout>